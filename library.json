{
    "name": "esp32-nextion",
    "version": "1.0.0",
    "keywords": "esp32, nextion, espressif, itead, display",
    "description": "ESP32 compatible driver for Nextion displays.",
    "license": "MIT",
    "authors":
    [
      {
        "name": "Gabriel Furtado de Almeida",
        "maintainer": true
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/gfurtadoalmeida/esp32-driver-nextion"
    },
    "frameworks": "espidf",
    "platforms": "*",
    "build": {
      "flags": [
        "-Idriver/include",
        "-Idriver/private_include",
        "-fno-rtti"
